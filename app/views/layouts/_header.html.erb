<header class="sticky top-0 z-50 bg-white border-b border-gray-200 dark:bg-gray-800">
  <nav class="bg-white border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800">
    <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl">
      <a href="/" class="flex items-center p-10">
        <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">Web Scraping</span>
      </a>
     <form action="<%= web_scraper_products_path %>" method="get" class="flex items-center space-x-2">
        <input type="url" name="url" placeholder="Enter URL to scrape"
          class="border rounded-lg px-3 py-2 text-gray-700 dark:text-white dark:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500"
          required>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
          Scrape
        </button>
      </form>
    </div>
    <div class="overflow-x-auto whitespace-nowrap px-4">
      <div class="flex space-x-4 px-4">
        <% Category.all.each do |category| %>
          <%= link_to category.name, products_path(category_id: category.id), class: "text-gray-700 dark:text-white hover:underline cursor-pointer" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>