<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
  <% @products.each do |product| %>
    <div class="border rounded-lg shadow-md p-4 bg-white">
      <h2 class="text-lg font-semibold"><%= product.title %></h2>
      <p class="text-gray-600"><%= product.description %></p>
      <p class="text-green-500 font-bold"><%= product.price %></p>
    </div>
  <% end %>
</div>
<div class="mt-6 flex justify-center space-x-4">
  <% if @pagy.prev %>
    <%= link_to "Previous", pagy_url_for(@pagy, @pagy.prev), class: "px-4 py-2 bg-gray-200 rounded-md" %>
  <% end %>

  <% (1..@pagy.pages).each do |page| %>
    <% if page == @pagy.page %>
      <span class="px-4 py-2 bg-blue-500 text-white rounded-md"><%= page %></span>
    <% else %>
      <%= link_to page, pagy_url_for(@pagy, page), class: "px-4 py-2 bg-gray-200 rounded-md" %>
    <% end %>
  <% end %>

  <% if @pagy.next %>
    <%= link_to "Next", pagy_url_for(@pagy, @pagy.next), class: "px-4 py-2 bg-gray-200 rounded-md" %>
  <% end %>
</div>
